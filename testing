			}

			
		}
		
		printBoard(board, n);
		
		
		gameOver = checkGameOver(board,n, &winner, totalTurns, comp, human);
		turn *= -1;
	}
	
	if (winner == -1){
		printf("%c player wins.\n", comp);
	}
	else if (winner == 1){
		printf("%c player wins.\n", human);
	}
	else{
		printf("Draw!\n");
	}
    
    
